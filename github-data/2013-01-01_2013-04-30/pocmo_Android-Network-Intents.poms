  <groupId>com.androidzeitgeist</groupId>
  <artifactId>android-network-intents</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>

  <name>Android Network Intents</name>
  <description>
    Android library for sending Intent objects as UDP packets to multicast addresses.
    You can use this library to identify devices (Network Service Discovery) or
    communicate with devices on your local network without knowing their IP addresses.
  </description>
  <url>https://github.com/pocmo/Android-Network-Intents</url>

  <scm>
    <url>https://github.com/pocmo/Android-Network-Intents</url>
    <connection>scm:git:git@github.com:pocmo/Android-Network-Intents.git</connection>
    <developerConnection>scm:git:git@github.com:pocmo/Android-Network-Intents.git</developerConnection>
  </scm>

  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/pocmo/Android-Network-Intents/issues</url>
  </issueManagement>

  <developers>
    <developer>
