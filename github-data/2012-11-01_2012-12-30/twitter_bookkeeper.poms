  </build>
  <profiles>
    <profile>
      <id>protobuf</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>generate-sources</phase>
                <id>default-cli</id>
                <configuration>
                  <target>
                    <exec executable="protoc" failonerror="true">
                      <arg value="--java_out=src/main/java" />
                      <arg value="src/main/protobuf/PubSubProtocol.proto" />
                    </exec>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
