    </modules>

    <scm>
        <url>https://github.com/briangriffey/book-animation/</url>
        <connection>scm:git:git://github.com:briangriffey/book-animation.git</connection>
        <developerConnection>scm:git:git@github.com:briangriffey/book-animation.git</developerConnection>
